<OutlinedLabel@Label>:
    halign: 'center'
    valign: 'middle'
    text_size: self.size

    font_size: 20
    background_color: 1, 1, 1, 1
    border_color: 1, 1, 1, 1
    border_width: 2
    color: 1, 1, 0, 1
    size_hint: 1, 1 #Expand to take up space in the segment evenly (depth 3)
    padding: 12, 6

<Segment@GridLayout>:
    cols: 2
    rows: 9
    spacing: 0
    padding: 8
    size_hint: 1, 1 #Fill space of the segment grid evenly (depth 2)

<SegmentGrid>:
    GridLayout:
        cols: 4
        rows: 2
        spacing: 0
        padding: 8
        size_hint: 1, 1 #Take up the entire window (depth 1)
        id: segment_container